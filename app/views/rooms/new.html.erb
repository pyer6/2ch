<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center mt-5">ルーム作成</h1>

    <div class="mt-4">
      <%= form_with(model: @room, local: true) do |f| %>
        <% if @room.errors.any? %>
          <p class="text-danger">タイトルは1~150文字にしてください。</p>
        <% end %>
        <div>
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mt-2">
          <%= f.submit "作成する", class: "btn btn-primary form-control" %>
        </div>
      <% end %>
    </div>
  </div>  
</div>