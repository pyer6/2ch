<div class="row">
  <div class="col-md-6 offset-md-3">
      <h1 class="text-center">ルーム作成</h1>

      <%= form_with(model: @room, local: true) do |f| %>
        <% if @room.errors.any? %>
          <p class="text-danger">タイトルは1~150文字にしてください。</p>
        <% end %>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-comtrol" %>

        <%= f.submit "作成する", class: "btn btn-primary" %>
      <% end %>
  </div>  
</div>