<div class="row">
  <div class="col-md-6 offset-md-3">
      <h1 class="text-center"><%= @room.title %></h1>


      <%= form_with(model: [@talk], url: room_talks_path, local: true) do |f| %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <% if @talk.errors.any? %>
          <p class="text-danger">1~150文字にしてください。</p>
        <% end %>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-comtrol" %>

        <%= f.submit "作成する", class: "btn btn-primary" %>
      <% end %>  
  </div>  
</div>